/* pages/index/index.wxss */
 page {
  background-color:#EEE9E9;
  width: 100%;
  height: 100%;
} 
.tag-item {
	/*padding: 20px;*/
	margin-bottom: 20rpx;
	background-color: #fff;
	padding-bottom: 50rpx;
}
.headline {
	display:flex;
	justify-content:space-between;
}
.tag-name {
	margin: 30rpx 0 20rpx 30rpx;
	font-size: 35rpx;
	font-weight: bold;
}

.tag-more {
	font-size: 28rpx;
	margin: 30rpx 30rpx 20rpx 0;
	color:rgba(128,128,128, 1);
}

.album-item {
  display: flex;
  flex-direction: row;
  margin: 0 20rpx;

}

.album {
	height:320rpx;
	width: 220rpx;
	margin:0 10rpx;
}

.album image{
	width: 220rpx;
	height: 220rpx;
}

.album-title {
	padding: 0 10rpx;
	font-size: 25rpx;
	font-weight: bold;
	text-align: center;
}

.album-intro {
	padding: 0 10rpx;
	font-size: 25rpx;
	text-align: left;
	color:rgba(128,128,128, 0.8);
}